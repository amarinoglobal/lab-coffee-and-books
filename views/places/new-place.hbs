<div class="row justify-content-center">

    <div class="col-md-6">

        <h1>Registro de nuevo lugar</h1>

        <hr>

        <form action="/places/crear" method="POST">

            <div class="form-group">
                <label for="name">Nombre del establecimiento</label>
                <input type="text" class="form-control" name="name" id="name">
            </div>
            <label for="type">Tipo de establecmiento</label>
            <select name="type" id="type" class="form-control">
                <option value="">Elige una opci√≥n</option>
                {{#each places}}
                <option value="{{id}}">{{type2}}</option>
                {{/each}}
            </select>

            <div class="form-group">
                <label for="lat">Latitud</label>
                <input type="text" class="form-control" name="lat" id="lat">
            </div>
            <div class="form-group">
                <label for="lng">Longitud</label>
                <input type="text" class="form-control" name="lng" id="lng">
            </div>

            <button type="submit" class="btn btn-outline-dark btn-block btn-lg">Registrar</button>

        </form>
        {{#if errorMessage}}
        <div
            style="margin-top: 20px; padding: 5px; color: white; background: red; text-align: center; font-size: .95em">
            {{errorMessage}}</div>
        {{/if}}
    </div>

</div>

</div>